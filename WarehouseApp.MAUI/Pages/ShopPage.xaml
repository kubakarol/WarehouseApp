<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WarehouseApp.MAUI.ViewModels"
             x:Class="WarehouseApp.MAUI.Pages.ShopPage"
             Title="Sklep">

    <CollectionView ItemsSource="{Binding Items}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BorderColor="LightGray" CornerRadius="8" Padding="10" Margin="10">
                    <VerticalStackLayout>
                        <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="20"/>
                        <Label Text="{Binding Description}" FontSize="14"/>
                        <Label Text="Ilość: {Binding Quantity}" FontSize="12" TextColor="Gray" />
                        <Button Text="Dodaj do koszyka" Clicked="OnAddToCartClicked" />
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
