<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="WarehouseApp.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:WarehouseApp.MAUI.Pages"
    Title="WarehouseApp">

    <!-- ekrany logowania -->
    <ShellContent Route="LoginPage"    ContentTemplate="{DataTemplate pages:LoginPage}" />
    <ShellContent Route="RegisterPage" ContentTemplate="{DataTemplate pages:RegisterPage}" />

    <!-- magazyn -->
    <ShellContent Route="InventoryPage" ContentTemplate="{DataTemplate pages:Inventory}" />

    <!-- dodawanie produktu  (Route = AddItemPage !) -->
    <ShellContent Route="AddItemPage"  ContentTemplate="{DataTemplate pages:AddItemPage}" />

    <!-- pozostaÅ‚e -->
    <ShellContent Route="ShopPage" ContentTemplate="{DataTemplate pages:ShopPage}" />
    <ShellContent Route="CartPage" ContentTemplate="{DataTemplate pages:CartPage}" />

</Shell>
